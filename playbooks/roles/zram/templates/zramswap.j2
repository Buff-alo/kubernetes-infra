# Zram configuration generated by Ansible
# Comma-separated list of algorithms
ALGO={{ zram_algorithm }}

# Percentage of total RAM (or 0 to disable)
{% if zram_percent is defined and zram_percent | int > 0 %}
PERCENT={{ zram_percent | int }}
{% else %}
PERCENT=0
{% endif %}

# Fixed size in MiB (overrides PERCENT if set)
{% if zram_size_mb is defined and zram_size_mb | int > 0 %}
SIZE={{ zram_size_mb | int }}M
{% else %}
# SIZE=0  # Uncomment for fixed size
{% endif %}

# Swap priority
PRIORITY={{ zram_priority }}
